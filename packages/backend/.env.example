# データベース設定
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/form_sales_support
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# JWT設定
# ⚠️ 本番環境では必ず以下のコマンドで生成したランダムな値に変更してください:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
# または: openssl rand -base64 64
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_RANDOM_STRING_MIN_64_CHARS_GENERATED_BY_SECRETS_MODULE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 環境設定
ENVIRONMENT=development
DEBUG=True

# CORS設定
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
